<style type="text/css">
	*{
		font-family: Georgia;
		/*font-family: 'Droid Serif', serif;*/
		margin: 0 auto;
		text-align: center;
	}
	.container-fluid{
		background-color: #F7F7F7;
		padding: 50px;
	}
	a{
		font-size: 1.5em;
		color: black;
	}
	p{
		font-size: 1.2em;
	}

	.main_jumbo{
		background-color: white;
		height: 750px;
		width: 830px;
		box-shadow: 2px 2px 15px #888888;
		}

		.main_jumbo_photo{
			margin-top: 15px;
		}

		.main_jumbo_header{
			font-family: 'Dancing Script', cursive;
			font-size: 4em;
		}
		.date{
			font-family: 'Dancing Script', cursive;
		}

	.main_our_story_photo, .main_proposal_photo, .rsvp_photo{
		border: 15px solid white;
		box-shadow: 2px 2px 15px #888888;
	}

	.registry_link{
		box-shadow: 2px 2px 15px #888888;
	}

	#main_navbar{
		top: 0;
		position: fixed;
		height: 81px;
		background-color: #F7F7F7;
		margin-right: 45px;
		box-shadow: 0 5px 2px -2px #888888;
		z-index: 2;
	}

	#main_navbar ul li a{
		font-family: 'Dancing Script', cursive;
		font-size: 2em;
	}

	#main_navbar ul{
		margin-top: 20px;
	}

	.cursive{
		font-family: 'Dancing Script', cursive;
	}

	.enlarge{
		font-size: 2em;
	}
	.enlarge3{
		font-size: 3em;
	}
	.enlarge4{
		font-size: 4em;
	}
	.minify{
		font-size: .8em;
	}

	.bridesmaids, .groomsmen{
		box-shadow: 2px 2px 15px #888888;
		background-color: white;
		display: inline-block;
		vertical-align: top;
		width: 150px;
		height: 200px;
	}

	.rsvpForm{
		width: 700px;
	}

	.rsvpForm label{
		width: 120px;
	}


	.rsvp_guests{
	 	margin-left: 150px;
	 	width: 500px;
	 }

	.rsvp_guests input{
	 	width: 300px;
	 }

	.red{
	 	color: red;
	 }

	.green{
		color: green;
	}

	.detailsTop{
		border: 15px solid white;
		background-color: white;
		box-shadow: 2px 2px 15px #888888;
		width: 650px;
	}

	.resort_link, .ring_bearer{
		display: inline-block;
	}

	.Wbq597J{
		list-style-type: none;
	}

	.googDoc{
		color: blue;
		text-decoration: underline;
		font-size: 1.2em;
	}

	.myCarousel{
		width: 650px;
		height: 450px;
		box-shadow: 2px 2px 15px #888888;
	}

	.carousel-inner>.item>img, .grow{
		height: 450px;
	}

	.footer{
		font-family: 'Indie Flower', cursive;
	}
	.carousel-control{
		opacity: .2;
	}

	.carousel-control:focus, .carousel-control:hover{
		opacity: .5;
	}

	.carousel-control .glyphicon-chevron-left, .carousel-control .icon-prev, .carousel-control .glyphicon-chevron-right, .carousel-control .icon-next{
		color: black;
	}

    .potterybarn{
        border: 10px solid black;
        height: 230px;
    }
